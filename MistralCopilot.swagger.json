{
  "swagger": "2.0",
  "info": {
    "title": "Azure AI Mistral Connector",
    "description": "Connecteur personnalisé pour interagir avec Azure AI Mistral via Azure Functions. Compatible avec Power Apps et Copilot Studio.",
    "version": "1.0"
  },
  "host": "azureai-modelesia-bc-dkdtdjapeebka4dy.francecentral-01.azurewebsites.net",
  "basePath": "/api",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/AzureAI_Mistral_BC": {
      "post": {
        "operationId": "GetMistralCompletionJSON",
        "summary": "Obtenir une complétion Mistral (JSON)",
        "description": "Envoie un prompt à Mistral et retourne la réponse complète au format JSON avec prompt, contexte et complétion",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "prompt": {
                  "type": "string",
                  "description": "Le prompt/question à envoyer au modèle Mistral",
                  "x-ms-summary": "Prompt",
                  "default": "Bonjour"
                },
                "contexte": {
                  "type": "string",
                  "description": "Le contexte système pour guider la réponse du modèle",
                  "x-ms-summary": "Contexte",
                  "default": "tu es un assistant professionnel et réponds de façon structurée, claire et détaillée. Précise dans ta réponse que tu es un agent Mistral"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Succès",
            "schema": {
              "type": "object",
              "properties": {
                "prompt": {
                  "type": "string",
                  "description": "Le prompt envoyé"
                },
                "contexte": {
                  "type": "string",
                  "description": "Le contexte utilisé"
                },
                "completion": {
                  "type": "string",
                  "description": "La réponse générée par Mistral"
                }
              }
            }
          }
        }
      }
    },
    "/AzureAI_Mistral_BC_COP": {
      "post": {
        "operationId": "GetMistralCompletionText",
        "summary": "Obtenir une complétion Mistral (Texte)",
        "description": "Envoie un prompt à Mistral et retourne uniquement la réponse en texte brut (idéal pour Copilot Studio)",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "prompt": {
                  "type": "string",
                  "description": "Le prompt/question à envoyer au modèle Mistral",
                  "x-ms-summary": "Prompt",
                  "default": "Bonjour"
                },
                "contexte": {
                  "type": "string",
                  "description": "Le contexte système pour guider la réponse du modèle",
                  "x-ms-summary": "Contexte",
                  "default": "tu es un assistant professionnel et réponds de façon structurée, claire et détaillée. Précise dans ta réponse que tu es un agent Mistral"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Succès",
            "schema": {
              "type": "string",
              "description": "La réponse générée par Mistral en texte brut"
            }
          }
        }
      }
    }
  },
  "definitions": {},
  "parameters": {},
  "responses": {},
  "securityDefinitions": {
    "function_key": {
      "type": "apiKey",
      "name": "code",
      "in": "query"
    }
  },
  "security": [
    {
      "function_key": []
    }
  ],
  "tags": []
